#!/usr/bin/env node

const yargs = require("yargs");

yargs
  .usage("Usage: $0 <command> [options]")
  .commandDir("cmds")
  .showHelpOnFail(true)
  .help(
    'help',
    'Show usage instructions.'
  )
  .command({
    command: '*',
    handler() { yargs.showHelp(); console.log('\n'); }
  })
  .option('global', {
    description: 'change default workspace to ~/.emacs.d/',
    alias: 'g',
    type: 'boolean',
  })
  .option('force', {
    description: 'enable force flag',
    alias: 'f',
    type: 'boolean',
  })
  .option('development', {
    description: 'turn on development mode',
    alias: 'dev',
    type: 'boolean',
  })
  .demandCommand()
  .wrap(yargs.terminalWidth())
  .help().argv;
